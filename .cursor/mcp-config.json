{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--port", "3001",
        "--host", "localhost",
        "--viewport-size", "1440x900",
        "--output-dir", "./playwright-output",
        "--save-session",
        "--save-trace",
        "--grant-permissions", "clipboard-read,clipboard-write,geolocation",
        "--allowed-hosts", "localhost,127.0.0.1"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}
